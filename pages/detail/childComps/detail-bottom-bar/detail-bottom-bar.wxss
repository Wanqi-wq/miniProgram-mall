/* pages/detail/childComps/detail-bottom-bar/detail-bottom-bar.wxss */
.bottom-bar {
  height: 116rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  text-align: center;
  background-color: #fff;
}
.bar-item {
  flex: 1;
  display: flex;
}

.bar-item .item {
  flex: 1;
}

.bar-left .text {
  font-size: 26rpx;
}

.bar-left .icon {
  display: block;
  width: 44rpx;
  height: 44rpx;
  margin: 20rpx auto 6rpx;
}

.bar-left .service {
  background-position: 0 -104rpx;
}

.bar-left .shop {
  background-position: 0 -196rpx;
}

.bar-right {
  font-size: 30rpx;
  color: #fff;
  line-height: 116rpx;
}

.bar-right .cart {
  background-color: #ffe817;
  color: #333;
}

.bar-right .buy {
  background-color: #f69;
}