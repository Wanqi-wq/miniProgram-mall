/* pages/profile/childComps/user-info/user-info.wxss */
.user-info {
  background: #ff5777;
  overflow: hidden;
  color: #fff;
  height: 160rpx;
}
.user-info .clear-fix{
  display: flex;
  margin: 20rpx;
}
.user-info .left{
  border-radius: 50% 50%;
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  background: #fff;
}
.user-info .left .img {
  display:inline-block;
   width: 100%;
   height: 100%;
}

.user-info .middle {
  flex:1;
  margin: 16rpx 30rpx;
}
.user-info .middle .login {
  font-size: 32rpx;
}
.user-info .middle .img {
  display:inline-block;
  width: 32rpx;
  height: 32rpx;
}
.user-info .middle .phone .user-phone{
  display:inline-block;
  font-size: 26rpx;
  padding: 10rpx;
}

.user-info .right .img{
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
}


